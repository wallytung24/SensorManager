<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/options_screen" >

    <Button
        android:id="@+id/btBackToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@android:color/background_dark"
        android:text="Save and Back to Menu"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btBackToMenu"
        android:layout_centerHorizontal="true"
        android:baselineAligned="false"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingBottom="40dp"
        android:paddingTop="50dp" >

        <CheckBox
            android:id="@+id/cbBioHarness_HR"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:onClick="onCheckboxClicked"
            android:text="BioHarness HR" />

        <CheckBox
            android:id="@+id/cbBioHarness_HRV"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:onClick="onCheckboxClicked"
            android:text="BioHarness HRV" />

        <CheckBox
            android:id="@+id/cbBioHarness_BR"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:onClick="onCheckboxClicked"
            android:text="BioHarness BR" />

        <CheckBox
            android:id="@+id/cbShimmer_SCR"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:onClick="onCheckboxClicked"
            android:text="Shimmer SCR" />

        <CheckBox
            android:id="@+id/cbShimmer_SCL"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:onClick="onCheckboxClicked"
            android:text="Shimmer SCL" />
    </LinearLayout>

</RelativeLayout>